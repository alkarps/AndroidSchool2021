<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/set_up_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:textSize="120sp" />

    <RadioGroup
        android:id="@+id/set_up_thread_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/set_up_thread_service_handler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/set_up_thread_service_handler_label" />

        <RadioButton
            android:id="@+id/set_up_thread_service_scheduler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_up_thread_service_scheduler_label" />

        <RadioButton
            android:id="@+id/set_up_thread_service_rx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_up_thread_service_rx_label" />
    </RadioGroup>

    <Button
        android:id="@+id/start_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_timer_label" />
</LinearLayout>