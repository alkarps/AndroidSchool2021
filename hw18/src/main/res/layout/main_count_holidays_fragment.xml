<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/count_holidays_fragment_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tool:text="Количество праздников сегодня: 0"
        android:textSize="@dimen/count_holidays_fragment_label_text_size" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/show_holidays_at_this_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_weight="0.1"
        android:text="@string/show_holidays_at_this_day_label"
        android:visibility="gone"/>
</LinearLayout>